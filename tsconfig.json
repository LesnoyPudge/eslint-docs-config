{
    "include": ["*.js", "*.jsx", "*.ts", "*.tsx"],
    "exclude": ["node_modules", "dist", "build", "rules", "eslint.*"],
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "module": "NodeNext",
        "baseUrl": "./",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
